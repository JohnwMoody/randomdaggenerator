<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bundle/css")
    @Scripts.Render("~/bundles/scripts")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">

</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <span class="navbar-brand mb-0 h1"><i class="fas fa-terminal"></i> Dag Generator</span> <small class="text-muted">Alpha v1.0.0</small>
    </nav>
    <div class="container-fluid mt-1 modifiedContainer">
        @RenderBody()
    </div>
    <footer class="footer">
        <span class="text-muted">Created by John Moody | Powered by vis.js</span>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
